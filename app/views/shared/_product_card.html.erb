<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden relative">
  <%= link_to product_path(product) do %>
    <% if product.images.attached? %>
      <%= image_tag product.images.first, alt: product.name, class: "w-full h-40 object-cover" %>
    <% else %>
      <%= image_tag asset_path('placeholder.png'), alt: product.name, class: "w-full h-40 object-cover", size: "300x300" %>
    <% end %>
  <% end %>
  <div class="p-4">
    <div class="flex justify-between items-center">
      <h3>
        <%= link_to product.name, product_path(product) %>
      </h3>
      <p class="text-gray-700 dark:text-gray-300 font-bold mb-4">$<%= product.price %></p>
    </div>
    <p class="text-gray-600 dark:text-gray-400 mb-2">
      <%= truncate(product.description, length: 60) %>
    </p>
    <div class="flex justify-between items-center">
      <% if product.available? %>
        <p class="text-green-500 dark:text-green-400 font-medium">En stock (<%= product.stock %>)</p>
      <% else %>
        <p class="text-red-500 dark:text-red-400 font-medium">Agotado</p>
      <% end %>
      <% unless hide_category %>
        <p class="text-gray-500 dark:text-gray-400"><%= product.category.name %></p>
      <% end %>
    </div>
  </div>
</div>

