<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 flex items-center justify-center min-h-screen">
<div class="container mx-auto p-4">
  <div class="flex justify-center items-center mb-4">
    <div class="text-center">
    <h1>Users List</h1>
    <%= button_to new_admin_user_path, method: :get, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-600 dark:focus:ring-indigo-400" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
  </div>
</div>
<ul class="space-y-4">
      <% @users.each do |user| %>
        <li class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-md flex justify-between items-center mb-2 max-w-md mx-auto">
          <div class="flex flex-col">
            <h3><%= link_to user.username, admin_user_path(user), class: "text-blue-500 dark:text-blue-400 hover:underline" %></h3>
            <p class="text-sm text-gray-500 dark:text-gray-400"><%= user.email %></p>
          </div>
          <div class="flex space-x-4 ml-4">
            <%= link_to 'Edit', edit_admin_user_path(user), class: "text-blue-500 dark:text-blue-400 hover:underline mr-2" %>
            <%= button_tag 'Delete', type: 'button', class: 'text-red-500 dark:text-red-400 hover:underline mr-2', onclick: "confirmDelete(#{user.id})" %>
            <% if user.active_for_authentication? %>
              <%= link_to 'Deactivate', deactivate_admin_user_path(user), method: :patch, class: "text-yellow-500 dark:text-yellow-400 hover:underline" %>
            <% else %>
              <%= link_to 'Activate', activate_admin_user_path(user), method: :patch, class: "text-green-500 dark:text-green-400 hover:underline" %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>

    <script>
      function confirmDelete(userId) {
        if (confirm('Are you sure you want to delete this user?')) {
          // Perform the delete action
          window.location.href = '/admin/users/' + userId + '?_method=delete';
        }
      }
    </script>

