<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 flex items-center justify-center min-h-screen">
  <div class="container mx-auto p-4">
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold"><%= @product.name %></h1>
        <div class="flex space-x-4">
          <%= link_to 'Editar', edit_admin_product_path(@product), class: 'text-blue-500 hover:underline' %>
        </div>
      </div>
      <div class="flex">
        <div class="flex-shrink-0 mr-4">
          <% if @product.images.attached? %>
            <%= image_tag @product.images.first, alt: @product.name, class: "w-full h-40 object-cover" %>
          <% else %>
            <%= image_tag asset_path('placeholder.png'), alt: @product.name, class: "w-full h-40 object-cover", size: "300x300" %>
          <% end %>
        </div>
        <div class="flex-grow">
          <p class="mb-4"><%= @product.description %></p>
          <p class="text-lg font-bold"><%= number_to_currency(@product.price) %></p>
          <p class="text-lg font-bold text-gray-500"><%= @product.category.name %></p>
          <p class="text-lg font-bold <%= 'text-red-500' if @product.stock == 0 %>">Stock: <%= @product.stock %></p>
          <p class="text-sm text-gray-500">Ingreso en: <%= @product.entry_at.strftime("%d-%m-%Y") %></p>
          <p class="text-sm text-gray-500">Modificado ultima vez en: <%= @product.updated_at.strftime("%d-%m-%Y %H:%M") %></p>
        </div>
      </div>
    </div>
  </div>
</body>
