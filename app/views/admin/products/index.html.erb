<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 flex items-center justify-center min-h-screen">
    <div class="flex justify-center items-center mb-4">
      <div class="text-center">
        <h1>Products</h1>
        <%= button_to new_admin_product_path, method: :get, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-600 dark:focus:ring-indigo-400" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
    </div>
    <ul class="space-y-4">
      <% @products.each do |product| %>
        <li class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md flex justify-between items-center mb-2">
          <div class="flex-shrink-0 mr-4">
            <% if product.images.attached? %>
              <%= image_tag product.images.first, alt: product.name, class: "w-full h-40 object-cover" %>
            <% else %>
              <%= image_tag asset_path('placeholder.png'), alt: product.name, class: "w-full h-40 object-cover", size: "300x300" %>
            <% end %>
          </div>
          <div class="flex-grow text-left">
              <h3><%= product.name %></h3>
              <p class="mb-4"><%= truncate(product.description, length: 80) %></p>
              <p class="text-lg font-bold"><%= number_to_currency(product.price) %></p>
              <p class="text-lg font-bold text-gray-500"><%= product.category.name %></p>
              <p class="text-lg font-bold <%= 'text-red-500' if product.stock == 0 %>">Stock: <%= product.stock %></p>
          </div>
          <div class="flex space-x-4">
            <%= link_to 'Edit', edit_admin_product_path(product), class: 'text-blue-500 hover:underline mr-4' %>
            <%= button_tag 'Delete', type: 'button', class: 'text-red-500 hover:underline', onclick: "confirmDelete(#{product.id})" %>
        </li>
      <% end %>
    </ul>
  </div>

  <script>
    function confirmDelete(productId) {
      if (confirm('Are you sure you want to delete this product?')) {
        // Perform the delete action
        window.location.href = '/admin/products/' + productId + '?_method=delete';
      }
    }
  </script>
</body>

