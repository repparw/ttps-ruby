<div class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 flex items-center justify-center min-h-screen">
  <div class="container mx-auto p-4">
    <div class="flex justify-center items-center mb-4">
      <h1>Ventas</h1>
      <%= link_to new_admin_sale_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-600 dark:focus:ring-indigo-400" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        <span>Nueva Venta</span>
      <% end %>
    </div>

    <div class="space-y-4">
      <% if @sales.empty? %>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
          <div class="text-center">
            <h3 class="text-lg font-medium">No Sales Available</h3>
            <p class="text-gray-500 dark:text-gray-400 mt-2">There are currently no sales to display.</p>
          </div>
        </div>
      <% else %>
        <% @sales.each do |sale| %>
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-lg font-medium">Order #<%= sale.id %></h3>
                <p class="text-gray-500 dark:text-gray-400">
                  Customer: <%= sale.customer.name %>
                </p>
             </div>
              <div class="text-right">
                <p class="text-lg font-bold">
                  Total: <%= number_to_currency(sale.total) %>
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  <%= sale.created_at.strftime("%B %d, %Y") %>
                </p>
              </div>
            </div>

            <div class="mt-4">
              <h4 class="text-md font-medium mb-2">Items:</h4>
              <div class="space-y-2">
                <% sale.sale_items.each do |item| %>
                  <div class="flex justify-between items-center py-2 border-b border-gray-200 dark:border-gray-700">
                    <div>
                      <p class="font-medium"><%= item.product.name %></p>
                      <p class="text-sm text-gray-500 dark:text-gray-400">
                        <%= truncate(item.product.description, length: 80) %>
                      </p>
                    </div>
                    <div class="text-right">
                      <p class="font-medium"><%= number_to_currency(item.price) %></p>
                      <p class="text-sm text-gray-500 dark:text-gray-400">
                        Qty: <%= item.quantity %>
                      </p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <% if current_user.admin? || (current_user.manager? && !current_user.admin?) %>
              <div class="mt-4 flex justify-end space-x-2">
                <%= link_to 'Edit', edit_admin_sale_path(sale), 
                    class: "text-blue-500 dark:text-blue-400 hover:underline" %>
                <% if sale.active? %>
                  <%= button_tag 'Cancel', 
                      type: 'button',
                      class: 'text-red-500 dark:text-red-400 hover:underline',
                      onclick: "confirmCancel(#{sale.id})" %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  function confirmCancel(saleId) {
    if (confirm('Are you sure you want to cancel this sale?')) {
      // Send a DELETE request to cancel the sale
      const token = document.querySelector('meta[name="csrf-token"]').content;
      fetch(`/admin/sales/${saleId}`, {
        method: 'DELETE',
        headers: {
          'X-CSRF-Token': token,
          'Content-Type': 'application/json'
        },
      }).then(response => {
        if (response.ok) {
          window.location.reload();
        } else {
          alert('There was an error cancelling the sale.');
        }
      });
    }
  }
<% end %>
