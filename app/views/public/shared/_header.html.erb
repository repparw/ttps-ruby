<header class="bg-white shadow-sm">
  <nav class="container mx-auto px-4">
    <div class="flex justify-between items-center h-16">
      <%= link_to root_path, class: "flex items-center" do %>
        <span class="text-xl font-bold text-gray-800">Avivas</span>
      <% end %>

      <div class="hidden md:flex space-x-8">
        <%= link_to "Inicio", root_path, class: "text-gray-600 hover:text-gray-900" %>
        <%= link_to "Productos", products_path, class: "text-gray-600 hover:text-gray-900" %>
        <div class="relative group">
          <%= link_to "#", class: "text-gray-600 hover:text-gray-900" do %>
            Categorías
          <% end %>
          <div class="absolute hidden group-hover:block bg-white shadow-lg mt-2">
            <div class="py-2">
              <% Category.all.each do |category| %>
                <%= link_to category.name, category_products_path(category), class: "block px-4 py-2 text-gray-600 hover:text-gray-900" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="flex items-center">
        <% if user_signed_in? %>
          <%= link_to "Panel Admin", admin_root_path, class: "text-gray-600 hover:text-gray-900 mr-4" if current_user.can_access_admin? %>
          <%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete, class: "text-gray-600 hover:text-gray-900" %>
        <% else %>
          <%= link_to "Iniciar Sesión", new_user_session_path, class: "text-gray-600 hover:text-gray-900" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>

