<div class="container mx-auto px-4 py-8">
  <h1>Categor√≠as</h1>

  <div class="flex flex-col gap-6 items-center">
    <% @categories.each do |category| %>

      <%= link_to category_path(category), class: "block group w-full max-w-lg" do %>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-transform hover:-translate-y-1 hover:shadow-xl">
          <div class="p-4">
            <h2>
              <%= category.name %>
            </h2>
            <p class="text-gray-600 dark:text-gray-300 text-sm text-center">
              <%= pluralize(category.products.count, 'producto') %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
