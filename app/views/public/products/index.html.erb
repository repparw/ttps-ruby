<h1 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">Products</h1>

<div class="categories mb-8">
  <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100">Categories</h2>
  <ul class="list-disc pl-5">
    <% @categories.each do |category| %>
      <li class="mb-1 text-gray-700 dark:text-gray-300"><%= category.name %></li>
    <% end %>
  </ul>
</div>

<div class="products">
  <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100">Available Products</h2>
  <ul class="space-y-4">
    <% if @products.empty? %>
      <p class="text-gray-500 dark:text-gray-400">No available products found.</p>
    <% else %>
      <% @products.each do |product| %>
      <li class="border p-4 rounded-lg shadow-sm bg-white dark:bg-gray-800">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100"><%= product.name %></h3>
        <p class="text-gray-700 dark:text-gray-300"><%= product.description %></p>
        <p class="text-gray-900 font-bold dark:text-gray-100">Price: <%= number_to_currency(product.unit_price) %></p>
        <p class="text-gray-600 dark:text-gray-400">Stock: <%= product.stock %></p>
        <% if product.images.attached? %>
          <div class="product-images mt-2 flex space-x-2">
            <% product.images.each do |image| %>
              <%= image_tag(image, size: "100x100", class: "rounded") %>
            <% end %>
          </div>
        <% end %>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>

