
<div class="container mx-auto py-8 dark:bg-gray-900">
  <h1>Avivas</h1>
  <div class="mb-4">
        <div class="mb-4 flex justify-center">
          <%= search_form_for @q do |f| %>
            <div class="flex items-center dark:text-gray-300">
              <%= f.search_field :name_or_description_cont, class: "form-input dark:bg-gray-800 dark:text-gray-300" %>
              <%= f.submit "Search", class: "ml-2 btn btn-primary dark:bg-gray-700 dark:text-gray-300" %>
            </div>
          <% end %>
        </div>
  </div>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% if @products.empty? %>
        <li class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md flex justify-between items-center mb-2">
          <div class="flex-grow text-center">
              <h3>No hay productos disponibles</h3>
              <p class="mb-4">Actualmente no hay productos para mostrar.</p>
          </div>
        </li>
    <% else %>
      <% @products.each do |product| %>
      <%= render partial: 'shared/product_card', locals: { product: product, hide_category: false} %>
      <% end %>
    <% end %>
  </div>
  <div class="flex justify-center mt-4">
    <%= paginate @products %>
  </div>
</div>
</div>

