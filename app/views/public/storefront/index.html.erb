<div class="container mx-auto py-8 dark:bg-gray-900">
  <h1>Storefront</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @products.each do |product| %>
      <%= render partial: 'shared/product_card', locals: { product: product, hide_category: false} %>
    <% end %>
  </div>
<div class="clearfix">
  <div class="pull-left">
    <%= paginate items %>
  </div>
</div>
</div>

